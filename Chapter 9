class Restaurant:
    def _init_(self, name, cuisine):
        self.name = name
        self.cuisine = cuisine
 
    def describe_restaurant(self):
      print(f"This is {self.name} and it serves {self.cuisine}.")

    def open_restaurant(self):
      print(f"{self.name} is now open!")


Mexican = Restaurant("Las Islas", "Mexican")
Mexican.describe_restaurant()
Mexican.open_restaurant()
